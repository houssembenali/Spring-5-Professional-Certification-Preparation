    <beans profile="dev">
        <bean id="h2" class="be.businesstraining.services.DevelopmentDatabaseEngine"/>
    </beans>

    <beans profile="prod">
        <bean id="oracle" class="be.businesstraining.services.ProductionDatabaseEngine"/>

    </beans>

</beans>